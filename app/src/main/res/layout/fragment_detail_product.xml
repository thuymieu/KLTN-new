<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/rlToolBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_main">
        <TextView
            android:id="@+id/tvName"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imProduct"
        app:layout_constraintTop_toBottomOf="@id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingHorizontal="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imProduct"
        android:textColor="@color/white"
        android:background="@drawable/custom_calendar"
        android:id="@+id/tvCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll1"
        app:layout_constraintTop_toBottomOf="@id/tvCalendar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_motorcycle"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tvType"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_calendar"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Đã sử dụng"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_odo"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tvOdo"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tvGia"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:text="Giá:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tvMota"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvGia"
        android:text="Tình trạng: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tvNamSanXuat"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvMota"
        android:text="Năm sản xuất: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tvMauSac"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamSanXuat"
        android:text="Màu sắc: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tvMoTa"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvMauSac"
        android:text="Mô tả: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="italic"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/red"
        android:id="@+id/tvValue"
        android:paddingEnd="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/tvStatus"
        android:paddingEnd="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/tvYearUse"
        android:paddingEnd="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/tvColor"
        android:paddingEnd="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvYearUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/tvDetail"
        android:paddingEnd="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/rlCall"
            android:layout_margin="10dp"
            android:background="@drawable/custom_contact"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_add_favourite"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/color_main"
                android:text="Yêu thích"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/rlAdd"
            android:layout_margin="10dp"
            android:background="@drawable/custom_add_cart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/icon_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Thêm vào giỏ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>